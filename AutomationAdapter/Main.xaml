<Window x:Class="AutomationAdapter.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutomationAdapter"
        mc:Ignorable="d"
        Title="TestRight CoPilot Automation Adapter" Height="240" Width="1024"
        WindowStartupLocation="Manual"
        Left="50" Top="50">
    <Grid>
        <TextBox x:Name="MessagesTextBox" HorizontalAlignment="Left" Height="173" TextWrapping="NoWrap" VerticalAlignment="Top" Width="1000" Margin="6,0,0,0" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" AcceptsReturn="True"/>
        <StatusBar x:Name="StatusBar" HorizontalAlignment="Left" Height="21" Margin="0,178,0,0" VerticalAlignment="Top" Width="1016">
            <StatusBarItem>
                <TextBlock x:Name="StatusBarText" Text="{Binding statusbartext}" x:FieldModifier="public" />
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>
